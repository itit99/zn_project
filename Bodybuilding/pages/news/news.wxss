page{
    background: #e7e7ef;
}
.list{
    margin: 12px;
    padding: 12px;
    background: #fff;
}
.list .title{
    height: 60rpx;
    display: block;
    line-height: 60rpx;
    /* word-break: break-all; */
    overflow: hidden; 
    white-space: nowrap;
    text-overflow:ellipsis;  
}
.list image{
    width: 100%;
}
.list .intro{
    color: #999;
    font-size: 80%;
    display: -webkit-box;
    text-indent: 2rem;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}
.more{
    display: flex;
    margin: 8px 0;
}
.more .time{
    color: #ccc;
    font-size:80% ;
}
.list view.m{
    flex: 2;
    text-align: right;
}
.list view.m image{
    width: 16rpx;
    height: 28rpx;
}