.tlist{
  padding: 4px 12px;
  background: #e7e7e7;
}
.tlist .tech{
  padding: 10px 16px;
  display: flex;
  background: #fff;
  border-radius: 5px;
  align-items: center;
  margin: 10px auto;
  box-shadow: 2px 2px 6px rgba(100, 100, 100, .6);
}
.tlist .tech image{
  width: 130rpx;
  height: 130rpx;
}
.tlist .tech .intro{
  flex: 2;
  margin-left: 16px;
}
.tlist .tech .intro text.t{
  color: #333;
  font-size: 100%;
  font-weight: 700;
  line-height: 180%;
}
.tlist .tech .intro text{
  color: #999;
  display: block;
  font: 400  80%/150% '';
}
.tlist .tech navigator.x{
  color: white;
  background: #00a0e9;
}
.tlist .tech navigator{
  color: #00a0e9;
  padding: 4px 12px;
  border-radius: 5px;
  font-size:80%;
  border: 1px solid #00a0e9;
}
